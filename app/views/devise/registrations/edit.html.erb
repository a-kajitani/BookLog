<main class="flex-grow-1 d-flex justify-content-center ">
  <div class="card p-5" style="width: 100%; max-width: 85%;">
    <div class=" d-flex align-items-center mx-auto">
        <h2 class="h1 mb-2 me-2">プロフィール設定</h2>
        <% unless current_user.admin? %>
          <%= link_to "アカウントを削除",
              registration_path(resource_name),
              data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか?" },
              class: "btn btn-danger btn-sm me-2" %>
        <% end %>
      </div>

    <div class="d-flex justify-content-center ">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put ,class: "flex-fill" }) do |f| %>
        <div class="field w-50 mx-auto">
          <i class="bi bi-at"></i>
          <%= f.label :email, "メールアドレス"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control "%>
            <% if f.object.errors[:email].any? %>
              <div class="text-danger small"><%= f.object.errors.full_messages_for(:email).join(", ") %></div>
            <% end %>
        </div>
       
        <br>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        
      <div class="field w-50 mx-auto">
        <i class="bi bi-person-fill"></i>
        <%= f.label :name, "ユーザー名"%><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control"%>
        <% if f.object.errors[:name].any? %>
            <div class="text-danger small"><%= f.object.errors.full_messages_for(:name).join(", ") %></div>
        <% end %>
      </div>
      <br>
      <div class="field w-50 mx-auto">
        <div  class= "d-flex">
          <i class="bi bi-lock-fill"></i>
          <%= f.label :password, "パスワード"%><i>(6文字以上,変更しない場合は空欄)</i><br />
        </div> 
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control"%>
        <% if f.object.errors[:password].any? %>
              <div class="text-danger small"><%= f.object.errors.full_messages_for(:password).join(", ") %></div>
        <% end %> 
      </div>
      <br> 
      <div class="field w-50 mx-auto">
        <div  class= "d-flex">
          <i class="bi bi-lock-fill"></i>
          <%= f.label :password_confirmation, "パスワード(確認用)"%><br />   
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
        </div>
        <% if f.object.errors[:password_confirmation].any? %>
              <div class="text-danger small"><%= f.object.errors.full_messages_for(:password_confirmation).join(", ") %></div>
        <% end %>
      </div>
        <br>
        <div class="field w-50 mx-auto">
          <div  class= "d-flex">
            <i class="bi bi-lock"></i>
            <%= f.label :current_password, "現在のパスワード(入力必須)" %><br />  
            <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
          </div>
          <% if f.object.errors[:current_password].any? %>
              <div class="text-danger small"><%= f.object.errors.full_messages_for(:current_password).join(", ") %></div>
          <% end %>
        </div>
        <br>
        
      <div class="actions w-50 mx-auto d-flex justify-content-center gap-2">
        <%= f.submit "更新" , class:"btn btn-primary w-50"%>
      </div>
      <% end %>
    </div>
  </div>
</main>

