
<main class="flex-grow-1 d-flex justify-content-center align-items-center">
  <div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
    <h2 class="text-center mb-4">サインアップ</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 
      <div class="field">
        <%= f.label :email, "メールアドレス"%><br />
        <div class="input-group has-validation">
          <span class="input-group-text"><i class="bi bi-at"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
           <% if f.object.errors[:email].any? %>
              <div class="text-danger small"><%= f.object.errors.full_messages_for(:email).join(", ") %></div>
          <% end %>
        </div>
      </div>
      <div class="field">
        <%= f.label :name, "ユーザー名"%><br />
        <div class="input-group has-validation">
          <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control"%>
           <% if f.object.errors[:name].any? %>
            <div class="text-danger small"><%= f.object.errors.full_messages_for(:name).join(", ") %></div>
          <% end %>
        </div>
      </div>

      <div class="field">
      <%= f.label :password, "パスワード"%><br />
        <div class="input-group has-validation">
          <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control"%>
          <% if f.object.errors[:password].any? %>
              <div class="text-danger small"><%= f.object.errors.full_messages_for(:password).join(", ") %></div>
          <% end %>
        </div>
      </div>

      <div class="field">
      <%= f.label :password_confirmation, "パスワード(確認用)"%><br />
        <div class="input-group has-validation">
          <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
          <% if f.object.errors[:password_confirmation].any? %>
              <div class="text-danger small"><%= f.object.errors.full_messages_for(:password_confirmation).join(", ") %></div>
          <% end %>
        </div>
      </div>
      
      <div class="actions">
        <%= f.submit "サインアップ", class:"btn btn-primary w-100" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</main>
